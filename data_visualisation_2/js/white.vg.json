{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "title": "Police Shootings between 2015 and 2022 in the US",
    "layer" : [
        {
            "data": {
        "url": "https://raw.githubusercontent.com/ASAW0006/FIT3179/main/data_visualisation_2/js/ne_110m_admin_1_states_provinces.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_1_states_provinces"}
    },
    "transform": [
        {
        "lookup": "properties.postal",
        "from": {
            "data": {
                "url": "https://raw.githubusercontent.com/ASAW0006/FIT3179/main/data_visualisation_2/data/Police_Shootings_(Clean).csv"
            },
            "key": "State",
            "fields": ["Total", "Population"]
        }
        },
        {"calculate": "(datum.Total + 0.1)/datum.Population*100000", "as": "Shootings per 100000 people"}
          ],
          "mark": {"type": "geoshape"},
          "encoding": {
            "color": {
              "field": "Shootings per 100000 people",
              "type": "quantitative",
              "scale": {"type": "log"}
            },
            "tooltip": [
              {"field": "properties.name", "type": "nominal", "title": "State"},
              {"field": "Total", "type": "quantitative", "title": "Shootings per 100000 people"}
            ]
          }
        },
        {
          "data": {
          "url": "https://raw.githubusercontent.com/ASAW0006/FIT3179/main/data_visualisation_2/js/ne_110m_graticules_5.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
        },
        "mark": {"type": "geoshape", "fill": "black", "stroke": "black"},
        "encoding": {"opacity": {"value":0.3}}
        
      } ]
        
      }
