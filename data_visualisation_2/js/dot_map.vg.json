{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Police Shootings of Unarmed Victims between 2015 and 2022 in the US",
    "layer": [
      {
        "data": {
          "url": "ne_110m_admin_1_states_provinces.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_1_states_provinces"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        
      },
      {
        "data": {
          "url": "ne_110m_graticules_5.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
        },
        "mark": {"type": "geoshape", "fill": "black", "stroke": "black"},
        "encoding": {"opacity": {"value":0.3}}
        
      },
      {
        "data": {
          "url": "US Police Shootings 2015-22.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "color": {
            "field": "race",
            "type" : "nominal",
            "scale":{
              "domain": [
                "White",
                "Black",
                "Asian",
                "Hispanic",
                "Native American",
                "Other"
              ],
              "range": [
                "#1b9e77",
                "#d95f02",
                "#7570b3",
                "#e7298a",
                "#66a61e",
                "#e6ab02"
              ]}
          },
          "opacity": {
            "condition": {
              "test": "datum['armed'] == '0' ",
               "value":0.6
            },
            "value":0
          },
          "tooltip": [
            {"field": "name"},
            {"field": "date"},
            {"field": "race"},
            {"field": "age"},
            {"field": "gender"},
            {"field": "city"},
            {"field": "state"}]
        }
      }
    ]
  }
